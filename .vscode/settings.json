{
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#8a397a",
        "titleBar.activeForeground": "#fff",
        "titleBar.inactiveBackground": "#55274c"
    },
    "eslint.validate": ["typescript", "typescriptreact", "json"],
    "eslint.packageManager": "yarn",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "[*]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true
        }
    },
    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },
    "files.associations": {
        "*rc": "json"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/yarn.lock": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/yarn.lock": true,
        "**/.eslintrc": true
    }
}

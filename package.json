{
    "name": "@troup/server",
    "private": true,
    "version": "0.0.0",
    "author": "Samrith Shankar <samrith.shankar@outlook.com>",
    "license": "GPL-3.0",
    "repository": "git@github.com:troup-io/troup-server.git",
    "scripts": {
        "postinstall": "yarn generate-typings && yarn prisma2 generate",
        "bs:install": "yarn install",
        "bs:generate": "yarn prisma2 generate",
        "bs:docker-compose": "(cd prisma && docker-compose up -d)",
        "bootstrap": "run-s bs:* generate-typings",
        "start": "dotenv -- nodehawk",
        "generate-typings": "ts-node -r tsconfig-paths/register -T src/schema",
        "debug": "dotenv -- nodehawk",
        "lint": "eslint . --ext .ts,.json,.js",
        "build": "rimraf dist && ttsc",
        "semver:alpha": "npm version --prerelease=\"alpha\"",
        "semver:beta": "npm version --prerelease=\"beta\"",
        "semver": "npm version"
    },
    "resolutions": {
        "graphql": "14.6.0"
    },
    "dependencies": {
        "@prisma/client": "^2.0.0-alpha.904",
        "bcryptjs": "2.4.3",
        "dotenv": "^8.2.0",
        "graphql": "^14.6.0",
        "graphql-middleware": "^4.0.2",
        "graphql-shield": "^7.0.14",
        "graphql-yoga": "^1.18.3",
        "helmet": "^3.21.3",
        "jsonwebtoken": "8.5.1",
        "nexus": "^0.12.0-rc.13",
        "nexus-prisma": "^0.10.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "2.4.2",
        "@types/helmet": "^0.0.45",
        "@types/jsonwebtoken": "^8.3.8",
        "@types/node": "13.7.4",
        "@typescript-eslint/eslint-plugin": "2.20.0",
        "@typescript-eslint/parser": "2.20.0",
        "@zerollup/ts-transform-paths": "^1.7.12",
        "dotenv-cli": "3.1.0",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.10.0",
        "eslint-plugin-prettier": "3.1.2",
        "nodehawk": "^0.0.7",
        "prettier": "1.19.1",
        "prisma2": "^2.0.0-alpha.904",
        "rimraf": "3.0.2",
        "ts-node": "8.6.2",
        "tsconfig-paths": "^3.9.0",
        "ttypescript": "^1.5.10",
        "typescript": "3.8.2",
        "yarn-run-all": "3.1.1"
    }
}
